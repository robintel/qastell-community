{
  "name": "qastell-playwright-allure2-example",
  "version": "1.0.0",
  "description": "Example: QAstell with Playwright and Allure 2 (stable) reporting",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "allure:generate": "npx allure generate allure-results -o allure-report --clean",
    "allure:open": "npx allure open allure-report",
    "report": "npm run allure:generate && npm run allure:open",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf allure-results allure-report playwright-report test-results qastell-report"
  },
  "dependencies": {
    "@playwright/test": "^1.50.0",
    "allure-playwright": "^2.15.1",
    "allure-commandline": "^2.32.0",
    "qastell": "^0.6.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.0"
  }
}
