{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "qastell/connectors": ["./node_modules/qastell/dist/connectors/index"]
    }
  },
  "include": ["steps/**/*.ts", "support/**/*.ts", "features/**/*.ts"],
  "exclude": ["node_modules", "dist", "reports"]
}
