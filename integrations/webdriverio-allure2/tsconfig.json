{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "qastell/connectors": ["./node_modules/qastell/dist/connectors/index.d.ts"]
    },
    "types": ["node", "@wdio/mocha-framework"]
  },
  "include": ["tests/**/*.ts", "wdio.conf.ts"],
  "exclude": ["node_modules", "dist", "allure-results", "allure-report"]
}
